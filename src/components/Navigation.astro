---
const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/', label: 'Startseite', exact: true },
  { href: '/unternehmen', label: 'Unternehmen' },
  { href: '/leistungen', label: 'Leistungen' },
  { href: '/apothekeneinrichtungen', label: 'Apothekeneinrichtungen' },
  { href: '/arztpraxen', label: 'Arztpraxen' },
  { href: '/wohnraummoebel', label: 'Wohnraumm√∂bel' },
  { href: '/kontakt', label: 'Kontakt' },
  { href: '/blog', label: 'Blog' },
];

function isActiveLink(href: string, exact = false): boolean {
  if (exact) {
    return currentPath === href;
  }
  return currentPath.startsWith(href) && href !== '/';
}
---

<nav class="border-t border-gray-200 lg:border-t-0" role="navigation" aria-label="Hauptnavigation">
  <!-- Desktop Navigation -->
  <ul class="hidden lg:flex space-x-8 py-4" role="menubar">
    {navItems.map((item) => (
      <li role="none">
        <a
          href={item.href}
          role="menuitem"
          class={`text-sm font-medium transition-colors hover:text-primary ${
            isActiveLink(item.href, item.exact)
              ? 'text-primary border-b-2 border-primary pb-1'
              : 'text-gray-700'
          }`}
          aria-current={isActiveLink(item.href, item.exact) ? 'page' : undefined}
        >
          {item.label}
        </a>
      </li>
    ))}
  </ul>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden lg:hidden py-4 border-t border-gray-200">
    <ul class="space-y-2" role="menubar">
      {navItems.map((item) => (
        <li role="none">
          <a
            href={item.href}
            role="menuitem"
            class={`block px-3 py-2 rounded-md text-base font-medium transition-colors hover:bg-gray-50 hover:text-primary ${
              isActiveLink(item.href, item.exact)
                ? 'text-primary bg-gray-50'
                : 'text-gray-700'
            }`}
            aria-current={isActiveLink(item.href, item.exact) ? 'page' : undefined}
          >
            {item.label}
          </a>
        </li>
      ))}

      <!-- Mobile Contact Info -->
      <li class="pt-4 border-t border-gray-200 mt-4">
        <a
          href="tel:+493746264500"
          class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:text-primary transition-colors"
          aria-label="Telefonnummer anrufen"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          <span>+49 37462 / 6450</span>
        </a>
      </li>

      <li>
        <a
          href="mailto:info@apothekeneinrichter.de"
          class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:text-primary transition-colors"
          aria-label="E-Mail senden"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          <span>info@apothekeneinrichter.de</span>
        </a>
      </li>
    </ul>
  </div>
</nav>