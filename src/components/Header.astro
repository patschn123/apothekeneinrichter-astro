---
import Navigation from './Navigation.astro';
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-50">
  <div class="container">
    <div class="flex justify-between items-center py-4">
      <!-- Logo and Company Name -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-3 hover:opacity-80 transition-opacity">
          <img
            src="/images/maedler_logo.png"
            alt="Apothekeneinrichter Mädler Logo"
            class="h-10 w-auto"
            loading="eager"
          />
          <div class="hidden sm:block">
            <div class="text-xl font-semibold text-primary">Mädler</div>
            <div class="text-sm text-secondary">Apothekeneinrichter</div>
          </div>
        </a>
      </div>

      <!-- Contact Info - Desktop -->
      <div class="hidden lg:flex items-center space-x-6 text-sm">
        <a
          href="tel:+4937462645D0"
          class="flex items-center space-x-2 hover:text-primary transition-colors"
          aria-label="Telefonnummer anrufen"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          <span>+49 37462 / 6450</span>
        </a>

        <a
          href="mailto:info@apothekeneinrichter.de"
          class="flex items-center space-x-2 hover:text-primary transition-colors"
          aria-label="E-Mail senden"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          <span>info@apothekeneinrichter.de</span>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="lg:hidden flex items-center p-2 rounded-md hover:bg-gray-100 transition-colors"
        aria-label="Navigation öffnen"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Navigation -->
    <Navigation />
  </div>
</header>

<script>
  // Mobile menu toggle functionality
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
        mobileMenuButton.setAttribute('aria-expanded', (!isExpanded).toString());
        mobileMenu.classList.toggle('hidden');

        // Update button icon
        const icon = mobileMenuButton.querySelector('svg path');
        if (icon) {
          if (isExpanded) {
            icon.setAttribute('d', 'M4 6h16M4 12h16M4 18h16'); // Hamburger
          } else {
            icon.setAttribute('d', 'M6 18L18 6M6 6l12 12'); // X
          }
        }
      });
    }
  });
</script>