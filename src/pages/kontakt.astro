---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout
  title="Kontakt - Apothekeneinrichter Mädler"
  description="Kontaktieren Sie Apothekeneinrichter Mädler für eine kostenlose Beratung. Telefon: +49 37462 / 6450, E-Mail: info@apothekeneinrichter.de"
>
  <Header />

  <main>
    <!-- Page Header -->
    <section class="section-sm bg-primary text-white">
      <div class="container">
        <div class="max-w-4xl">
          <h1 class="text-5xl font-bold mb-6">
            Kontakt
          </h1>
          <p class="text-xl leading-relaxed">
            Haben Sie Fragen zu unseren Leistungen oder möchten Sie eine kostenlose
            Beratung? Wir freuen uns auf Ihre Nachricht und stehen Ihnen gerne
            persönlich zur Verfügung.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Information & Form -->
    <section class="section bg-white">
      <div class="container">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Contact Information -->
          <div>
            <h2 class="text-3xl font-bold text-primary mb-8">
              So erreichen Sie uns
            </h2>

            <div class="space-y-6">
              <!-- Address -->
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-primary text-white rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-primary mb-2">Anschrift</h3>
                  <p class="text-secondary">
                    Apothekeneinrichter Mädler<br>
                    Steinberg<br>
                    Deutschland
                  </p>
                </div>
              </div>

              <!-- Phone -->
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-primary text-white rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-primary mb-2">Telefon</h3>
                  <p class="text-secondary mb-2">
                    <a href="tel:+493746264500" class="text-primary hover:text-primary-light transition-colors">
                      +49 37462 / 6450
                    </a>
                  </p>
                  <p class="text-sm text-secondary">
                    Montag - Freitag: 8:00 - 17:00 Uhr<br>
                    Samstag nach Vereinbarung
                  </p>
                </div>
              </div>

              <!-- Email -->
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-primary text-white rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-primary mb-2">E-Mail</h3>
                  <p class="text-secondary mb-2">
                    <a href="mailto:info@apothekeneinrichter.de" class="text-primary hover:text-primary-light transition-colors">
                      info@apothekeneinrichter.de
                    </a>
                  </p>
                  <p class="text-sm text-secondary">
                    Wir antworten innerhalb von 24 Stunden
                  </p>
                </div>
              </div>

              <!-- Website -->
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-primary text-white rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-primary mb-2">Website</h3>
                  <p class="text-secondary">
                    <a href="https://www.apothekeneinrichter.de" class="text-primary hover:text-primary-light transition-colors">
                      www.apothekeneinrichter.de
                    </a>
                  </p>
                </div>
              </div>
            </div>

            <!-- Company Info -->
            <div class="mt-12 p-6 bg-gray-50 rounded-lg">
              <h3 class="text-lg font-semibold text-primary mb-4">Über uns</h3>
              <p class="text-secondary mb-4">
                Seit 1881 stehen wir für traditionelle Handwerkskunst und zeitgemäßes Design.
                Als Familienunternehmen in vierter Generation sind wir Ihr zuverlässiger Partner
                für individuelle Einrichtungslösungen.
              </p>
              <div class="flex items-center space-x-4 text-sm text-secondary">
                <span class="flex items-center space-x-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span>Seit 1881</span>
                </span>
                <span class="flex items-center space-x-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                  </svg>
                  <span>Familienunternehmen</span>
                </span>
                <span class="flex items-center space-x-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <span>Höchste Qualität</span>
                </span>
              </div>
            </div>
          </div>

          <!-- Contact Form -->
          <div>
            <h2 class="text-3xl font-bold text-primary mb-8">
              Nachricht senden
            </h2>

            <form class="space-y-6" action="/api/contact" method="POST">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="form-group">
                  <label for="firstName" class="form-label">Vorname *</label>
                  <input
                    type="text"
                    id="firstName"
                    name="firstName"
                    class="form-input"
                    required
                    aria-describedby="firstNameHelp"
                  />
                </div>

                <div class="form-group">
                  <label for="lastName" class="form-label">Nachname *</label>
                  <input
                    type="text"
                    id="lastName"
                    name="lastName"
                    class="form-input"
                    required
                  />
                </div>
              </div>

              <div class="form-group">
                <label for="email" class="form-label">E-Mail-Adresse *</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-input"
                  required
                  aria-describedby="emailHelp"
                />
                <p id="emailHelp" class="text-sm text-secondary mt-1">
                  Wir verwenden Ihre E-Mail-Adresse nur zur Beantwortung Ihrer Anfrage.
                </p>
              </div>

              <div class="form-group">
                <label for="phone" class="form-label">Telefonnummer</label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="form-input"
                  aria-describedby="phoneHelp"
                />
                <p id="phoneHelp" class="text-sm text-secondary mt-1">
                  Optional - für Rückfragen
                </p>
              </div>

              <div class="form-group">
                <label for="company" class="form-label">Unternehmen/Praxis</label>
                <input
                  type="text"
                  id="company"
                  name="company"
                  class="form-input"
                />
              </div>

              <div class="form-group">
                <label for="subject" class="form-label">Betreff *</label>
                <select id="subject" name="subject" class="form-select" required>
                  <option value="">Bitte wählen Sie ein Thema</option>
                  <option value="apotheke">Apothekeneinrichtung</option>
                  <option value="arztpraxis">Arztpraxis</option>
                  <option value="wohnraum">Wohnraummöbel</option>
                  <option value="beratung">Kostenlose Beratung</option>
                  <option value="angebot">Angebot anfordern</option>
                  <option value="sonstiges">Sonstiges</option>
                </select>
              </div>

              <div class="form-group">
                <label for="message" class="form-label">Ihre Nachricht *</label>
                <textarea
                  id="message"
                  name="message"
                  rows="6"
                  class="form-textarea"
                  required
                  placeholder="Beschreiben Sie uns Ihr Projekt oder Ihre Anfrage..."
                ></textarea>
              </div>

              <!-- Privacy Checkbox -->
              <div class="flex items-start space-x-3">
                <input
                  type="checkbox"
                  id="privacy"
                  name="privacy"
                  required
                  class="mt-1"
                />
                <label for="privacy" class="text-sm text-secondary">
                  Ich habe die <a href="/datenschutz" class="text-primary hover:text-primary-light underline" target="_blank">Datenschutzerklärung</a>
                  gelesen und stimme der Verarbeitung meiner Daten zu. *
                </label>
              </div>

              <!-- Submit Button -->
              <div class="pt-4">
                <button type="submit" class="btn btn-primary btn-large w-full">
                  Nachricht senden
                </button>
              </div>
            </form>

            <div class="mt-8 p-4 bg-blue-50 rounded-lg">
              <div class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-blue-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <p class="text-sm text-blue-800 font-medium mb-1">Kostenlose Erstberatung</p>
                  <p class="text-sm text-blue-700">
                    Gerne kommen wir für eine unverbindliche Erstberatung zu Ihnen vor Ort.
                    Rufen Sie uns einfach an oder senden Sie uns eine Nachricht.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Map Section Placeholder -->
    <section class="section-sm bg-gray-50">
      <div class="container">
        <div class="text-center mb-8">
          <h2 class="text-3xl font-bold text-primary mb-4">
            So finden Sie uns
          </h2>
          <p class="text-secondary">
            Besuchen Sie uns in unserem Showroom in Steinberg
          </p>
        </div>

        <div class="bg-gray-300 rounded-lg h-96 flex items-center justify-center">
          <div class="text-center text-gray-600">
            <svg class="w-12 h-12 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <p>Interaktive Karte wird hier eingebunden</p>
            <p class="text-sm">Steinberg, Deutschland</p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<script>
  // Form submission handling
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.querySelector('form');
    if (form) {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();

        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());

        // Basic client-side validation
        if (!data.firstName || !data.lastName || !data.email || !data.subject || !data.message || !data.privacy) {
          alert('Bitte füllen Sie alle Pflichtfelder aus.');
          return;
        }

        // TODO: Implement actual form submission
        alert('Vielen Dank für Ihre Nachricht! Wir werden uns schnellstmöglich bei Ihnen melden.');
        form.reset();
      });
    }
  });
</script>